<%-include('../includes/header.ejs')%>
<link rel="stylesheet" href="/css/login.css">
<%-include('../includes/navbar.ejs')%>


  <div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				
        <%if(error.length){%>
          <div style="border-radius: 15px;"  class="no alert alert-warning alert-dismissible fade show alert-danger" role="alert">
            <strong><%=error%></strong>
            <button  type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <%}%>
				<form class="login100-form validate-form" action="/login" method="POST">
					<span class="login100-form-title">
						Member Login
					</span>

          <div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
            <input 
            class="input100 <%=validationError.find(e=>e.param==='email') ? 'error' : ''%>" 
            type="text" 
            name="email" 
            placeholder="Email"
            value="<%=oldData.email%>">
						<span class="focus-input100"></span>
						<span class="symbol-input100 ">
							<i class="<%=validationError.find(e=>e.param==='email') ? 'ic' : ''%> fa fa-envelope" aria-hidden="true"></i>
						</span>
					</div>

          <div class="wrap-input100 validate-input" >
            <input 
            class="input100 <%=validationError.find(e=>e.param==='password') ? 'error' : ''%>" 
            type="password" 
            name="password" 
            placeholder="Password"
            value="<%=oldData.password%>"
            >
						<span class="focus-input100"></span>
						<span class="symbol-input100 ">
							<i class=" <%=validationError.find(e=>e.param==='password') ? 'ic' : ''%> fa fa-lock" aria-hidden="true"></i>
						</span>
          </div>
					
					<div class="container-login100-form-btn">
						<button type="submit" class="button login100-form-btn">
							<i class="fa  fa-spin"></i>Login
						</button>
					</div>

					<!-- <div class="text-center p-t-12">
						<span class="txt1">
							Forgot
						</span>
						<a class="txt2" href="#">
							Username / Password?
						</a>
					</div> -->

					<div style="margin-top: 10px;" class="text-center p-t-136">
						<a class="txt2" href="/signup">
							Create your Account
				
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>
	
	

	
  <script src="/javascript/load.js"></script>

<%-include('../includes/footer.ejs')%>